<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bennettdierckman.calclogin.AttendeeJoinSelected">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvPartyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="@string/titleJoinPartyName"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:layout_below="@+id/tvPartyTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="@string/titleJoinPartyPassword"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPartyPassword"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="@string/partypasswordHint"
            android:inputType="textPassword"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bJoinParty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView27"
            android:layout_alignStart="@+id/textView27"
            android:layout_below="@+id/etPartyPassword"
            android:text="@string/btnJoinParty" />

        <Button
            android:id="@+id/bEndParty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView27"
            android:layout_alignRight="@+id/textView27"
            android:layout_below="@+id/etPartyPassword"
            android:text="@string/btnJoinPartyCancel" />
    </RelativeLayout>
</RelativeLayout>
