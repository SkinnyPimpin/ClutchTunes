<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bennettdierckman.calclogin.ChangePassword">

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/bNext"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bReturn2Party"
            android:layout_alignBottom="@+id/bReturn2Party"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:text="Next" />

        <Button
            android:id="@+id/bReturn2Party"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="Go Back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="Change Account Password"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etConfirmNewPassword"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bNext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:ems="10"
            android:hint="Password:"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etConfirmNewPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="Enter Account's Current Password:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>
