<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bennettdierckman.calclogin.ChangeBiography">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/bNext"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bReturn2Party"
            android:layout_alignBottom="@+id/bReturn2Party"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="Save Changes" />

        <Button
            android:id="@+id/bReturn2Party"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="Go Back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="Change Profile Bio"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNewBio"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bNext"
            android:layout_alignRight="@+id/bNext"
            android:layout_below="@+id/textView"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="New Bio:"
            android:inputType="textPersonName" />

    </RelativeLayout>
</RelativeLayout>
