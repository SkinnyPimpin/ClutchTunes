<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bennettdierckman.calclogin.HostParty">

    <!-- TODO: Party Host: display video, afford option to end party -->


    <TextView
        android:id="@+id/tvPartyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Example Party Name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bEndParty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:text="End Party" />

    <Button
        android:id="@+id/bFetchInitialVideo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bEndParty"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="FetchVideo" />
</RelativeLayout>
