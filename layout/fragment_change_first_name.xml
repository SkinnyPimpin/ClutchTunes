<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bennettdierckman.calclogin.ChangeFirstName">

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/bNext"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bReturn2Party"
            android:layout_alignBottom="@+id/bReturn2Party"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="Save Changes" />

        <Button
            android:id="@+id/bReturn2Party"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="Go Back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Change Account First Name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNewFirstName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bNext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="New First Name:"
            android:inputType="textPersonName" />

    </RelativeLayout>
</RelativeLayout>
